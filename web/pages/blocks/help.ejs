<script>
$(document).ready(function(){
    $.help={hide:$('#help_window .hide_donate'),e:$('#help_window')}
    if($.ccio.op().hide_donate!==1){
        setTimeout(function(){
            $.help.e.modal('show')
        },1000*60*5)
        $.help.hide.click(function(){
            $.ccio.op('hide_donate',1);
            $.help.e.modal('hide');
        })
    }else{
        $.help.hide.hide()
    }
})
</script>